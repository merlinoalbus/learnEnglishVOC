{
  "name": "vocabulary-learning-app",
  "version": "2.0.0",
  "description": "App per lo studio del vocabolario inglese con AI Assistant, statistiche avanzate e TypeScript",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@types/otplib": "^7.0.0",
    "@types/qrcode": "^1.5.5",
    "firebase": "^11.10.0",
    "lucide-react": "^0.263.1",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.13",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.21",
    "firebase-tools": "^14.10.1",
    "postcss": "^8.5.6",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run type-check && react-scripts build",
    "build:fast": "CI=true GENERATE_SOURCEMAP=false INLINE_RUNTIME_CHUNK=false react-scripts build",
    "build:docker": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test --watchAll=false --coverage=false",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build:analyze": "npm run build && npx source-map-explorer 'build/static/js/*.js'",
    "serve": "npx serve -s build -l 3000",
    "setup:env": "cp .env.example .env.local && echo 'Created .env.local - Please add your API keys!'",
    "check:env": "node scripts/check-env.js",
    "security:check": "npm audit && node scripts/security-check.js",
    "config:status": "node scripts/config-status.js",
    "docker:build": "docker build -t vocabulary-app .",
    "docker:build:fast": "docker build --target builder -t vocabulary-app-dev .",
    "docker:run": "docker run -p 3000:80 vocabulary-app",
    "docker:dev": "docker-compose --profile dev up",
    "docker:prod": "docker-compose up",
    "docker:clean": "docker system prune -f && docker builder prune -f",
    "dev": "npm run type-check && npm start",
    "deploy:vercel": "npm run build && vercel deploy --prod",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=build",
    "styles:watch": "postcss src/styles/**/*.css --watch --dir src/styles/dist",
    "styles:build": "postcss src/styles/**/*.css --dir src/styles/dist",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "firebase deploy --only hosting,firestore",
    "firebase:login": "firebase login",
    "lint:css": "stylelint 'src/styles/**/*.css'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": "warn",
      "no-console": "off",
      "@typescript-eslint/no-unused-vars": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/merlinoalbus/learnEnglishVOC.git"
  },
  "keywords": [
    "vocabulary",
    "learning",
    "english",
    "react",
    "typescript",
    "ai-assistant",
    "education",
    "gemini-ai",
    "secure-configuration"
  ],
  "author": "merlinoalbus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/merlinoalbus/learnEnglishVOC/issues"
  }
}
